void eliminarJugadoresSinFichas() {
    vector <jugador> jugadoresActualizados;

    for (int i = 0; i < jugadores.size(); i++) {
        if (stoi(jugadores[i].fichas) > 0)
            jugadoresActualizados.push_back(jugadores[i]);
    }
    
    jugadores = jugadoresActualizados;
}
    
